
@model IEnumerable<ActivityTracker.Models.Activity>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Upcomming Activities</h2>

<ul class="activities voffset4">
    @foreach (var activity in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @activity.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @activity.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <div>
                    <span class="description">
                        @activity.Description
                    </span>
                </div>
            
                <div class="location">
                    @activity.Location
                </div>

                <div class="category">
                    @activity.Category.Name
                </div>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Activities", new {id = activity.Id})">
                        Edit
                    </a>
                    <a class="js-cancel-activity"
                       data-activity-id="@activity.Id"
                       href="#">
                        Cancel
                    </a>
                </div>
            </div>
        </li>
    }
</ul>

@section scripts
{
    <script>
        $(document).ready(function() {
            $(".js-cancel-activity").click(function (e) {
                var link = $(e.target);
                bootbox.dialog({
                    title: 'Confirm',
                    message: "<p>Are you sure you want to delete this activity?</p>",
                    size: 'large',
                    buttons: {
                        no: {
                            label: "No",
                            className: 'btn-default',
                            callback: function() {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: 'btn-danger',
                            callback: function(){
                                $.ajax({
                                        url: "/api/activities/" + link.attr("data-activity-id"),
                                        method: "DELETE"
                                    })
                                    .done(function () {
                                        link.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        });
                                    })
                                    .fail(function () {
                                        bootbox.alert("Something failed!");
                                    });
                            }
                        }
                    }
                });
            });
        });
    </script>
}
